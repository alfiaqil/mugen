
[Info]
name			= "Saber"		;Artoria Pendragon (アルトリア・ペンドラゴン)
displayname		= "MBTL Saber"	;From Melty Blood Type Lumina
versiondate		= 10,28,2022	;Version of character (MM-DD-YYYY or X.XX)
mugenversion	= 1.1			;Version of M.U.G.E.N character works on (X.XX)
author			= "Beterhans"	;Character author name
pal.defaults	= 2,1,3,4				;Default palettes in order of preference (up to 4)
;localcoord		= 1280,720		;Local coordinate space width and height
localcoord = 1700      ;jambu;Local coordinate space width and height

; Files for the player
